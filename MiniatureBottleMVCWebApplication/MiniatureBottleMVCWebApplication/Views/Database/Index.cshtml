@model IEnumerable<MiniatureBottleMVCWebApplication.Models.Bottle>

@{
    ViewBag.Title = "Bottle Collection";
}


@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h2>@ViewBag.Title</h2>
            </hgroup>
        </div>
    </section>
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleDetail.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleDrinkDetail.AlcoholType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleDrinkDetail.Alcohol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleDrinkDetail.Age)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.BottleDetail.Shape)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleDetail.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleDetail.Material)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottleDetail.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleDetail.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleDrinkDetail.AlcoholType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleDrinkDetail.Alcohol)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleDrinkDetail.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleDetail.Shape)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleDetail.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleDetail.Material)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottleDetail.Note)
        </td>
        <td>
            <img src="@Url.Action("GetImage", "Serialized", new { id = item.Id })" />    
        </td>
        <td> 
            @Html.ActionLink("Delete", "Delete", new {id = item.Id })
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
